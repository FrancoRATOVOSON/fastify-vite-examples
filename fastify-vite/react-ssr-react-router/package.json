{
  "name": "react-ssr-react-router",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "TS_NODE_PROJECT=./tsconfig.server.json node --watch-path=./server --import @swc-node/register/esm-register server/index.ts --dev",
    "build:client": "vite build",
    "build:server": "swc ./server -d dist --strip-leading-paths",
    "build": "npm run build:client && npm run build:server",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/vite": "8.0.0-alpha.2",
    "fastify": "^5.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.18",
    "@tailwindcss/vite": "^4.0.7",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "fastify-tsconfig": "^3.0.0",
    "tailwindcss": "^4.0.7",
    "typescript": "^5.7.3",
    "vite": "^6.1.1",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
